    <?php
    $cisla = filter_input (INPUT_GET,"CISLA");
    $pole = explode(",",$cisla);
    for ($i=0; $i < count($pole); $i++) {
        $pole[$i] = intval($pole[$i]);
    }
    foreach ($pole as $hodnota) {
        echo "<p>";
        for ($i = 0; $i < $hodnota; $i++) {
            echo "+";
        }
        echo "</p>\n";
    }
    ?>
    <form action="graph.php" method"GET">
        <input type="text" name="vlozte data" value="<?php echo $cisla ?>">
